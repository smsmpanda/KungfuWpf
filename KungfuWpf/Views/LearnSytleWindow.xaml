<Window x:Class="KungfuWpf.Views.LearnSytleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KungfuWpf.Views"
        mc:Ignorable="d"
        Title="LearnSytleWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="ButtonBaseStyle" TargetType="Button">
            <Setter Property="Foreground" Value="white"></Setter>
            <Setter Property="Background" Value="blue"></Setter>
        </Style>
        <Style x:Key="Buttonstyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="Width" Value="100"></Setter>
            <Setter Property="Height" Value="50"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Button Style="{StaticResource Buttonstyle}" Content="button1"></Button>
            <Button Style="{StaticResource Buttonstyle}" Content="button2"></Button>
            <Button Style="{StaticResource Buttonstyle}" Content="button3"></Button>
        </StackPanel>
    </Grid>
</Window>
